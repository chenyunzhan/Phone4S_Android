<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">@color/material_indigo_500</item>-->
        <!--<item name="colorPrimaryDark">@color/material_indigo_600</item>-->
        <!--<item name="colorAccent">@color/material_teal_500</item>-->
        <item name="colorPrimary">@color/t088c8c</item>
        <item name="colorPrimaryDark">@color/t088c8c</item>
        <item name="colorAccent">@color/material_teal_500</item>
        <!-- 设置没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/ac_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/ac_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/ac_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/ac_right_out</item>
    </style>

</resources>
